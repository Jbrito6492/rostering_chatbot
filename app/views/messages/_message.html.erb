<% if message.content? %>
  <div class="bg-gray-100 rounded-lg p-4 mt-4 shadow-sm">
    <p class="font-semibold text-gray-800"><%= message.role %></p>
    <div class="text-gray-700 mt-2 mb-3">
      <%= format_content_with_embedded_json(message.content) %>
    </div>
    <% if message.llm_provider? %>
      <p class="text-xs text-gray-500">
        Provider: <%= message.llm_provider %>
      </p>
    <% end %>
    <% if message.ragas_score? %>
      <p class="text-xs font-medium text-gray-600">
        Ragas Score: <%= message.ragas_score %>
      </p>
    <% end %>
  </div>
<% end %>
